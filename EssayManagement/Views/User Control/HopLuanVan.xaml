<UserControl x:Class="EssayManagement.Views.User_Control.HopLuanVan"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EssayManagement.Views.User_Control"
             mc:Ignorable="d" 
             d:DesignHeight="180" d:DesignWidth="150">
    <Border Background="Orange" CornerRadius="20" Height="180" Width="150" Cursor="Hand">
        <StackPanel>
            <StackPanel Height="150" VerticalAlignment="Top">
                <TextBlock x:Name="txbNgayGui" Text="🕑 Ngày gửi" Margin="15 15 15 0" FontFamily="Bahnschrift" Opacity="0.5" FontSize="10" TextWrapping="WrapWithOverflow"></TextBlock>
                <TextBlock x:Name="txbTieuDe" Text="Tiêu đề" Margin="15 10 15 40" FontFamily="Bahnschrift" FontSize="15" Height="83" MaxHeight="50" TextWrapping="WrapWithOverflow"></TextBlock>
                <TextBlock x:Name="txbLinhVuc" Text="Lĩnh vực" Margin="15 0 15 0" FontFamily="Bahnschrift" FontSize="12" Height="auto" MaxHeight="30" TextWrapping="WrapWithOverflow" VerticalAlignment="Bottom"></TextBlock>
            </StackPanel>
            <Border CornerRadius="8" Background="{StaticResource PrimaryBrush}" Width="60" Height="17" HorizontalAlignment="Left" Margin="15,0,0,0">
                <TextBlock x:Name="txbTrangThai" Text="Chưa chấm" HorizontalAlignment="Center" Foreground="White" FontFamily="Bahnschrift" VerticalAlignment="Center" FontSize="10"></TextBlock>
            </Border>
        </StackPanel>
    </Border>
</UserControl>
